<?xml version="1.0" encoding="UTF-8"?>

<?import com.seerofspace.components.DirField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root" prefHeight="400.0" prefWidth="635.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.MainGUIController">
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <DirField fx:id="dirField" text="Zip file or folder">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin></DirField>
            <RadioButton fx:id="radioJava" mnemonicParsing="false" selected="true" text="Java">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </RadioButton>
            <RadioButton fx:id="radioCpp" mnemonicParsing="false" text="Cpp">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </RadioButton>
            <CheckBox fx:id="mossCheckBox" mnemonicParsing="false" selected="true" text="Only include MOSS zip files">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </CheckBox>
            <CheckBox fx:id="renameCheckBox" mnemonicParsing="false" text="Shorten folder names">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </CheckBox>
            <CheckBox fx:id="blackboardCheckBox" mnemonicParsing="false" text="Blackboard Zip">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </CheckBox>
            <Button fx:id="startButton" mnemonicParsing="false" text="Start">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets top="40.0" />
         </BorderPane.margin>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
